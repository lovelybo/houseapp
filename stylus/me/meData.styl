@import "../common/body.styl"
@import "../common/title.styl"
body
  overflow hidden
.mark
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 1
  display none
.con
  margin-top 10px
  .items
    position relative
    height 40px
    background-color #FFF
    .border
      position absolute
      width 95%
      height 1px
      background-color #efefef
      bottom 0
      right 0
    input
      position absolute
      border 0
      height 40px
      width 120px
      left 160px
    span
      line-height 40px
      padding-left 10px
      color #656565
    .items_arrow
      position absolute
      width 100px
      height 20px
      text-align right
      right 10px
      top 50%
      margin-top -7px
      img
        height 14px
.pics
  padding-bottom 10px
  overflow hidden
  background-color #FFF
  .pics_li
    width 33.3%
    float left
    .photo
      background-color #878787
      width 100px
      height 64px
      border-radius 8px
      margin 10px auto
    .txt
      font-size 12px
      text-align center
      color #656565
.change_photo
  position absolute
  width 100%
  bottom -124px
  z-index 2
  .items
    position relative
    height 40px
    background-color #FFF
    .txt
      text-align center
      color #656565
      .cancel
        color #EA5404
      span
        line-height 40px
    .border
      position absolute
      width 94%
      height 1px
      background-color #efefef
      left 3%
      bottom 0
    .ipt_file
      position absolute
      width 100%
      height 40px
      top 0
      opacity 0
