@import "../common/body.styl"
@import "../common/title.styl"
.items
  position relative
  height 50px
  border-bottom 1px solid #D9DADF
  background-color #FFF
  padding-left 8px
  margin-top 10px
  line-height 50px
  color #474747
  .about
    position absolute
    width 50px
    height 50px
    top 0
    right 0
  .click
    position absolute
    width 100px
    height 50px
    right 0px
    top 50%
    margin-top -25px
  .cookie
    float right
    margin-right 30px
    color #BFBFBF
  .img
    position absolute
    height 14px
    top 50%
    margin-top -7px
    right 10px
  .button
    position absolute
    right 10px
    top 50%
    margin-top -15px
    width 50px
    height 30px
    background-color #EA5404
    border-radius 20px
    padding 1px
    .button_flag
      position absolute
      width 30px
      height 30px
      left 0px
      border-radius 50%
      background-color #FFF
      box-shadow inset 0px -5px 5px #efefef
.quit
  position relative
  text-align center
.confirm
  position fixed
  width 274px
  height 110px
  top 50%
  margin-top -80px
  left 50%
  margin-left -137px
  background-color #ffffff
  border-radius 10px
  display none
  z-index 2
  .top
    height 59px
    text-align center
    line-height 59px
    font-size 12px
    border-bottom 1px solid #EBEBEE
  .bottom
    position relative
    overflow hidden
    .border
      position absolute
      width 1px
      height 50px
      background-color #EBEBEB
      left 50%
    .left,.right
      float left
      width 50%
      height 50px
      text-align center
      line-height 50px
    .right
      color #EA5404
.mark
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 1
  display none