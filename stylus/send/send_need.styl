@import "../common/body.styl"
@import "../common/title.styl"
.title
  .prev
    left 5px
    font-size 16px
  .next
    position absolute
    right 10px
    font-size 16px
    color #ea5404
    top 0
.con
  margin-top 60px
.items_01
  width 90%
  margin-left 5%
  background-color #FFF
  height 50px
  margin-bottom 10px
  border-radius 5px
  input
    border 0
    margin 16px 5%
    width 90%
.items_02
  background-color #FFF
  width 90%
  margin-left 5%
  border-radius 5px
  textarea
    width 90%
    margin 16px 5%
    resize none
    border 0
.mark
  position fixed
  width 100%
  height 100%
  background-color #000
  opacity 0.4
  top 0
  z-index 11
  display none
.alert
  position absolute
  width 70%
  left 15%
  height 114px
  top 50%
  margin-top -57px
  border-radius 8px
  background-color #FFF
  z-index 12
  display none
  .top
    height 70px
    line-height 70px
    text-align center
    font-size 12px
    color #3e3e3e
    border-bottom 1px solid #EBEBEE
  .bottom
    height 30px
    text-align center
    line-height 40px
    font-size 20px
    color #ea5404

