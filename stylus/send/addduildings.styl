@import "../common/body.styl"
@import "../common/title.styl"
input
	width 96%
	height 39px
	border 1px solid #E3E3E8
	margin-left 2%
	margin-top 10px
	border-radius 4px
	padding-left 10px
	box-sizing border-box
	font-size 12px
	color #B7B7B7
	font-family "微软雅黑"
	outline none
.add_btn
	display inline-block
	width 96%
	height 42px
	border 1px solid #E3E3E8
	margin-left 2%
	margin-top 15px
	border-radius 4px
	color #EB5C18
	background #FFF
	line-height 42px
	text-align center
.mark
	position fixed
	width 100%
	height 100%
	background rgba(0,0,0,0.2)
	top 0
	left 0
	display none
.alert
	position fixed
	background-color #FFF
	border-radius 10px
	width 70%
	left 15%
	height 114px
	top 50%
	margin-top -57px
	display none
	.top
		height 60px
		border-bottom 1px solid #E1E2E6
		font-size 12px
		text-align center
		line-height 60px
	.bottom
		font-size 20px
		color #ea5404
		height 50px
		line-height 50px
		text-align center