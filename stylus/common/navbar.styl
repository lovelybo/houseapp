.navbar
  position fixed
  background-color #FFF
  bottom 0
  left 0
  width 100%
  height 50px
  border-top 1px solid #F3F3F4
  z-index 20
  ul
    overflow hidden
    text-align center
    li
      position relative
      width 20%
      height 60px
      text-align center
      font-size 16px
      color: #b9b9b9
      float left
      .navbar_txt
        color: #EA5404
      div
        position absolute
        left 50%
        margin-left -17px
        top 5px
        img
          height 22px
      .more
        margin-left -28px
        img
          margin-left 4px
          height 40px
          width 40px
      span
        line-height 80px
        margin-left -10px